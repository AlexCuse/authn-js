{
  "include": [
    "./src/*"
  ],
  "compilerOptions": {
    // output format
    "target": "es5",
    "module": "commonjs",

    // output files
    "listEmittedFiles": true,
    "declaration": true,
    "outDir": "./lib",
    "sourceMap": true,

    // extra checks
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true
  }
}
